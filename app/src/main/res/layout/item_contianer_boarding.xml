<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    >

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/onboarding_image"
        android:layout_width="353dp"
        android:layout_height="450dp"
        android:scaleType="centerCrop"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="7dp"
        app:srcCompat="@drawable/onboarding_image1"
        app:shapeAppearanceOverlay="@style/CustomeImageStyle"/>

    <TextView
        android:id="@+id/onboardingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:text="@string/onboarding_title"
        android:textStyle="bold"
        android:lineHeight="45dp"
        android:layout_marginTop="35dp"
        android:layout_marginStart="15dp"
        android:padding="4dp"
        android:textAlignment="viewStart"
        />
    <TextView
        android:id="@+id/onboardingDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/dark_grey"
        android:text="@string/onboarding_desc"
        android:layout_marginTop="12dp"
        android:lineHeight="23dp"
        android:layout_marginStart="15dp"
        android:padding="4dp"
        />
</LinearLayout>