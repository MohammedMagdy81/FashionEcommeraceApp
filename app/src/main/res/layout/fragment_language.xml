<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.LanguageFragment">

    <View
        android:id="@+id/language_icon_back"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="46dp"
        android:background="@drawable/onboarding_elips"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/icon_back"
        app:layout_constraintBottom_toBottomOf="@+id/language_icon_back"
        app:layout_constraintEnd_toEndOf="@+id/language_icon_back"
        app:layout_constraintStart_toStartOf="@+id/language_icon_back"
        app:layout_constraintTop_toTopOf="@+id/language_icon_back" />

    <EditText
        android:id="@+id/language_et_search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/et_search_bg"
        android:drawableStart="@drawable/ic_baseline_search_24"
        android:drawablePadding="12dp"
        android:hint="Search.."
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/language_icon_back" />

    <TextView
        android:id="@+id/language_text_select_lang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="@string/select_language"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/language_et_search" />

    <RadioGroup
        android:id="@+id/language_radiogroup_lang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="13dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/language_text_select_lang">

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/item_languge_background"
            android:buttonTint="@color/dark_grey"
            android:checked="false"
            android:drawableEnd="@drawable/uk"
            android:drawablePadding="12dp"
            android:elevation="4dp"
            android:layoutDirection="rtl"
            android:padding="12dp"
            android:text="English"
            android:textColor="@color/light_grey2"
            android:textSize="16sp" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/item_languge_background"
            android:buttonTint="@color/dark_grey"
            android:checked="false"
            android:drawableEnd="@drawable/brazil"
            android:drawablePadding="12dp"
            android:elevation="4dp"
            android:layoutDirection="rtl"
            android:padding="12dp"
            android:text="Britannica"
            android:textColor="@color/light_grey2"
            android:textSize="16sp" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/item_languge_background"
            android:buttonTint="@color/dark_grey"
            android:checked="false"
            android:drawableEnd="@drawable/bengladesh"
            android:drawablePadding="12dp"
            android:elevation="4dp"
            android:layoutDirection="rtl"
            android:padding="12dp"
            android:text="Bengali"
            android:textColor="@color/light_grey2"
            android:textSize="16sp" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/item_languge_background"
            android:buttonTint="@color/dark_grey"
            android:checked="false"
            android:drawableEnd="@drawable/germany"
            android:drawablePadding="12dp"
            android:elevation="4dp"
            android:layoutDirection="rtl"
            android:padding="12dp"
            android:text="German"
            android:textColor="@color/light_grey2"
            android:textSize="16sp" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/item_languge_background"
            android:buttonTint="@color/dark_grey"
            android:checked="false"
            android:drawableEnd="@drawable/portugal"
            android:drawablePadding="12dp"
            android:elevation="4dp"
            android:layoutDirection="rtl"
            android:padding="12dp"
            android:text="Portuguese"
            android:textColor="@color/light_grey2"
            android:textSize="16sp" />

    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>