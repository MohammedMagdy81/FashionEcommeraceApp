<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/image_review"
        android:layout_width="76dp"
        android:layout_height="76dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="8dp"
        android:src="@drawable/image_review4"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"/>

    <TextView
        android:id="@+id/person_name_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mohamed Magdy"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="6dp"
        android:layout_marginStart="8dp"
       app:layout_constraintStart_toEndOf="@id/image_review"
        app:layout_constraintTop_toTopOf="@id/image_review"
        />
    <TextView
        android:id="@+id/person_review"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="hello this order is very good hello this order is very good hello this order is very good "
        android:textSize="11sp"
        android:textColor="@color/dark_grey"
        app:layout_constraintTop_toBottomOf="@id/person_name_review"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/person_name_review"
        android:padding="6dp"
        android:lineHeight="16dp"
        android:gravity="start"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/person_review"
        app:layout_constraintStart_toStartOf="@id/person_review"
        android:text="2 Hours ago"
        android:id="@+id/text_time_review"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/text_time_review"
        android:background="@color/light_grey"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>